@using Cardid.Models
@model List<Card>
@{
    ViewBag.Title = "MainCardView";
    int userDecksCount = (int)TempData["deckscount"];
}



@if (ViewBag.SearchString == null)
{
    <h1 class="view-title">All Your Cards</h1>

    if (Model.Count == 0)
    {
        <div>You don't have any cards yet.</div>
    }
}
else
{
    <h1 class="view-title">Search Results</h1>
}

<div class="flex flex-left">

    <div class="card-column">

        @if (Model.Count > 0)
        {
            <div>
                @using (Html.BeginForm("SearchCards", "Card", null, FormMethod.Get, new { @class = "vertical-form" }))
                {
                    <div>
                        <input type="text" name="searchString" />
                    </div>
                    <div>
                        <button type="submit" class="btn main-btn">
                            <span class="icons">
                                &#xe90f;
                            </span>
                            <span class="tab"></span>
                            Search for text in cards
                        </button>
                    </div>
                }
            </div>
        }

        <div>
            <a href="@Url.Action("CreateCardInit", "Card")" class="btn main-btn">
                <span class="icons">
                    &#xe900;
                </span>
                <span class="tab"></span>
                Create a new card
            </a>
        </div>

    </div>
</div>


@if (ViewBag.SearchString != null)
{
    <div class="container-header">

        @if (Model.Count > 0)
        {
            <h1 class="view-title">Search results for "@ViewBag.SearchString":</h1>
        }
        else
        {
            <h4 class="bold">No cards found containing "@ViewBag.SearchString"</h4>
        }

    </div>
}


@if (Model.Count > 0)
{
    <div class="flex flex-left">

        @foreach (Card thisCard in Model)
        {
            <div class="card-bothsides">
                <div class="card-field">@thisCard.Front</div>
                <div class="card-field">@thisCard.Back</div>
                <div class="card-options">
                    @if (thisCard.UserID == Session["userid"].ToString())
                    {
                        <div>
                            <a href="@Url.Action("EditCardInit", "Card", new { cardID = thisCard.CardID })" class="btn main-btn">
                                <span class="icons">&#xe90d;</span>
                                <span class="tab"></span>
                                Edit card
                            </a>
                        </div>
                    }

                    @if (userDecksCount > thisCard.Decks().Count)
                    {
                        <div>
                            <a href="@Url.Action("ChooseDecksInit", "Deck", new { cardID = thisCard.CardID })" class="btn main-btn">
                                <span class="icons">&#xe90e;</span>
                                <span class="tab"></span>
                                Add to your decks
                            </a>
                        </div>
                    }
                </div>
                <div class="card-decks">
                    @for (int i = 0; i < thisCard.Decks().Count; i++)
                    {
                        <p class="small-type at-bottom">Currently in:</p>
                        Deck deck = thisCard.Decks()[i];
                        if (deck.UserID == Session["userid"].ToString())
                        {
                            @Html.ActionLink(deck.DeckName, "EditDeck", "Deck", new { deckId = deck.DeckID }, new { @class = "deck-incard small-type" })

                        }
                        else
                        {
                            @Html.ActionLink(deck.DeckName, "CardsInDeck", "Deck", new { deckId = deck.DeckID }, new { @class = "deck-incard small-type" })
                        }

                    }
                </div>
            </div>
        }
    </div>
}



<script type="text/javascript" src="../../Content/cardView.js"></script>









