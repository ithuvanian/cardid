@using Cardid.Models
@model List<Card>
@{
    ViewBag.Title = "Choose Cards For Deck";
}



<h2>Add Cards to Deck: @ViewBag.Deck.Name</h2>

<div class="card-container">


    @if (Model.Count == 0)
    {
        <p>You currently have no cards.</p>
        @Html.ActionLink("Create a new card", "CreateCardInit", "Card", null, new { @class = "btn main-btn" })
    }
    else
    {
        foreach (Card thisCard in Model)
        {
            <div class="card-bothsides">

                <div class="front-field">@thisCard.Front</div>
                <div class="back-field">@thisCard.Back</div>

                <div class="card-options">
                    @Html.ActionLink("Add to deck", "ChooseDecksSubmit", "Deck", new { cardID = thisCard.CardID, deckID = ViewBag.Deck.DeckID }, new { @class = "btn card-button" })
                </div>
            </div>
        }

    }


</div>