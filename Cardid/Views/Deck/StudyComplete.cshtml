
@using Cardid.Models
@model Study
@{
    ViewBag.Title = "SessionComplete";
}
<div>
    <h1 class="view-title">
        <span class="icons">
            &#xe915;
        </span>
        <span class="half-tab"></span>
        Results
    </h1>
</div>

<div class="module">
    <div class="final-score">
        <p class="at-top at-bottom">
            You got @Model.TotalScore out of @Model.PossibleScore correct (@Model.Percentage()%).
        </p>
    </div>
    @if (Model.ToRedo == null)
    {
        <p class="at-top">
            Congratulations!
        </p>
    }
    else
    {
        <div>
            <a href="@Url.Action("StudyRedo", "Deck", new { redo = Model.ToRedo, deckID = Model.DeckID, frontFirst = Model.FrontFirst })" class="btn main-btn">
                <span class="icons">
                    &#xe984;
                </span>
                <span class="tab"></span>
                Review incorrect answers
            </a>
        </div>
    }

    <p class="at-bottom">
        Study the whole deck again:
    </p>
    <div>
        <a href="@Url.Action("StudyBegin", "Deck", new { deckID = Model.DeckID, frontFirst = true })" class="btn main-btn">
            <span class="icons">
                &#xe984;&nbsp;
            </span>
            Front first
        </a>
        <a href="@Url.Action("StudyBegin", "Deck", new { deckID = Model.DeckID, frontFirst = false })" class="btn main-btn">
            <span class="icons">
                &#xe984;&nbsp;
            </span>
            Back first
        </a>
    </div>

    <div class="spacer"></div>
    <div>
        <a href="@Url.Action("Index", "Deck")" class="btn main-btn">
            <span class="icons">
                &#xe932;&nbsp;
            </span>
            Find another deck
        </a>
    </div>
</div>