
@using Cardid.Models
@model List<Tag>

@{
    ViewBag.Title = "Tags";
}

<h2 class="view-title">All Your Tags</h2>
<p>All tags that you create are available for others to use.</p>
<p>You can delete tags that you have created if no other users have added them to their decks.</p>

@foreach (Tag tag in Model)
{
    if (tag.Decks().Count > 0)
    {
        @Html.ActionLink(tag.TagName, "SearchDeckTags", "Deck", new { searchstring = tag.TagName }, new { @class = "active-tag" })
    }
    else
    {
        <span class="inactive-tag">@tag.TagName</span>
    }

    if (tag.CurrentUserIDs().Count <= 1)
    {
        @Html.ActionLink("X", "DeleteTag", "Deck", new { tagID = tag.TagID }, null)
    }

}
