@using Cardid.Models
@model User
@{
    ViewBag.Title = "Login";
}

<h1 class="view-title">Login</h1>

<div class="module">
    @using (Html.BeginForm("CompleteLogin", "Home", FormMethod.Post))
    {
        @Html.ValidationMessage("invalid-credentials")
        if (ViewBag.RegisterInstead == true)
        {
            @Html.ActionLink(" Sign up here", "BeginRegister", "Home");
        }

        <div class="formValidationGroup">
            @Html.LabelFor(m => m.Email)
            @Html.EditorFor(m => m.Email, new { autofocus = "autofocus" })
        </div>

        <div class="formValidationGroup">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password)
        </div>

        <button type="submit" class="btn main-btn float-right">Login</button>
    }
</div>